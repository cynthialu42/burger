<div class = "top-bun">
    <h1 class = "burger-title"><i class="far fa-star"></i> EAT-DA-BURGER <i class="far fa-star"></i></h1>
</div>
<div class="lettuce"> 
</div>
<div class="tomato">
    <h2 class = "title">Burgers to be eaten</h2>
    <h2 class = "title" >Eaten Already</h2>
</div>
<div class="cheese"> </div>
<div class="burger-container">
    <div class="left-container">
        <ol>
            {{#each burger}}
                {{#unless devoured}}
                    <li class = "spacing">
                        {{burger_name}}
                        <button class = "devour-it btn-style" data-id = "{{id}}" data-newdevoured = "{{devoured}}">
                            {{#if devoured}}Eaten {{else}}EAT IT!{{/if}}
                        </button>

                    </li>
                {{/unless}}
            {{/each}}
        </ol>
    </div>

    <div class="right-container">
        <ol class = "eaten-burgers">
            {{#each burger}}
                {{#if devoured}}
                    <li class = "spacing">
                        {{burger_name}}
                    </li>
                {{/if}}
            {{/each}}
        </ol>
    </div>
</div>
<div class="mayo"> </div>
<div class="bottom-container">
    <form class="create-form">
        <div class="form-group">
            <label for = "name">Add a Burger: </label>
            <input class = "input-box" type = "text" id = "name" name = "burger-name"> 
            <button class = "btn-style-btm" type = "submit"><i class="fas fa-4x fa-utensils"></i></button>

        </div>
    </form>
</div>
<div class="plate"> </div>

