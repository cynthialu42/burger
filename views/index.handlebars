<h1>Index page!</h1>
<h2>Burgers to be eaten</h2>
<ol>
    {{#each burger}}
        {{#unless devoured}}
            <li>
                {{burger_name}}
                <button class = "devour-it" data-id = "{{id}}" data-newdevoured = "{{devoured}}">
                    {{#if devoured}}Eaten {{else}}Devour it!{{/if}}
                </button>

            </li>
        {{/unless}}
    {{/each}}
</ol>

<h2>Eaten Already</h2>
<ol>
    {{#each burger}}
        {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
        {{/if}}
    {{/each}}
</ol>



<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for = "name">Burger Name: </label>
        <input type = "text" id = "name" name = "burger-name"> 
    </div>
    <button type = "submit">Add Burger</button>
</form>
