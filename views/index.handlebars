<h1>Index page!</h1>
<h2>Burgers to be eaten</h2>
<ul>
    {{#each burger}}
        {{#unless devoured}}
            {{> burgers/burger-block devour= false}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Already</h2>
{{#each burger}}
    {{#if devoured}}
        {{> burgers/burger-block devour = true}}

    {{/if}}
{{/each}}


<h2>Add a Burger</h2>
<form class="create-form">
    <div class="form-group">
        <label for = "name">Burger Name: </label>
        <input type = "text" id = "name" name = "burger-name"> 
    </div>
    <button type = "submit">Add Burger</button>
</form>
